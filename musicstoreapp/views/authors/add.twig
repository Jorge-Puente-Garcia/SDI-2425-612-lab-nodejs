{% extends "layout.twig" %}
{% block title %} Agregar autores{% endblock %}
{% block main_container %}
    <h2>Agregar autor</h2>
    <form class="form-horizontal" method="post" action="/authors/add">
        <div class="form-group">
            <label class="control-label col-sm-2" for="name">Nombre:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name" name="name" placeholder="Nombre del autor"
                       />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="group">Nombre del grupo:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="group" name="group" placeholder="Grupo del autor"
                       />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="rol">Rol en el grupo:</label>
            <div class="col-sm-10">
                <select class="form-control" id="rol" name="rol">
                    {% for rol in roles %}
                        <option value="{{rol.rol}}">{{rol.rol}}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Agregar</button>
            </div>
        </div>
    </form>
{% endblock %}